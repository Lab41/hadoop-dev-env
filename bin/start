#!/bin/sh

cd `dirname $0`

set -e

hadoop_conf=$1

if [[ "$hadoop_conf" == "" ]]; then
    echo "please enter the config" 1>&2
    exit 1
fi


./run $hadoop_conf start-dfs.sh
./run $hadoop_conf yarn-daemon.sh start resourcemanager
./run $hadoop_conf yarn-daemon.sh start nodemanager
./run $hadoop_conf start-hbase.sh
