#!/bin/sh

cd `dirname $0`

set -e

hadoop_conf=$1

if [[ "$hadoop_conf" == "" ]]; then
    echo "please enter the config" 1>&2
    exit 1
fi

./hadoop-dev-env $hadoop_conf zkServer.sh start
./hadoop-dev-env $hadoop_conf start-dfs.sh
./hadoop-dev-env $hadoop_conf start-yarn.sh
./hadoop-dev-env $hadoop_conf yarn-daemons.sh start proxyserver
./hadoop-dev-env $hadoop_conf mr-jobhistory-daemon.sh start historyserver
./hadoop-dev-env $hadoop_conf start-hbase.sh
