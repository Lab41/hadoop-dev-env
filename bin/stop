#!/bin/sh

cd `dirname $0`

set -e


hadoop_conf=$1

if [[ "$hadoop_conf" == "" ]]; then
    echo "please enter the config" 1>&2
    exit 1
fi


./hadoop-dev-env $hadoop_conf stop-hbase.sh
./hadoop-dev-env $hadoop_conf mr-jobhistory-daemon.sh stop historyserver
./hadoop-dev-env $hadoop_conf stop-yarn.sh
./hadoop-dev-env $hadoop_conf stop-dfs.sh
./hadoop-dev-env $hadoop_conf zkServer.sh stop
